
@{
    ViewBag.Title = "Confirm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
</head>


<h3 style="text-align: center;">THÔNG TIN NHÂN VIÊN ĐÃ ĐĂNG KÝ</h3>
<div style="display:flex; padding:10px; align-items:center; justify-content: center;">
    <img src="@ViewBag.Avatar" height="150px" width="150px" style="border-radius: 50%;" />
    <div style="font-size:20px; margin-left:40px">
        Mã nhân viên:  @ViewBag.EmpID <br />
        Họ tên: @ViewBag.Name <br />
        Ngày sinh: @ViewBag.BirthOfDate <br />
        Email: @ViewBag.Email <br />
        Mật khẩu: @ViewBag.Password <br />
        Phòng ban: @ViewBag.Department <br />
        @Html.ActionLink("Quay lại", "RegisterEmp")
    </div>
</div>

