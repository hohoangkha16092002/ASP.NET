@model IEnumerable<BaiMau_62130808.Models.SinhVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, /*defaultSort: "TenSV",*/ rowsPerPage: 2);
    string gtinh = "";
    var i = 0;
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")

}




@using (Html.BeginForm())
{
    <input type="text" name="maSV" />
    <input type="submit" value="Tìm kiếm" />
    <h3>DANH SÁCH NHÂN VIÊN</h3>

    <p>
        @Html.ActionLink("Thêm mới", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                STT
            </th>
            <th>
                Mã SV
            </th>
            <th>
                Họ sinh viên
            </th>
            <th>
                Tên sinh viên
            </th>
            <th>
                Giới tính
            </th>
            <th>
                Ngày sinh
            </th>
            <th>
                Ảnh NV
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Phòng ban
            </th>
            <th>Chức năng</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{i++;}
                    @i
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaSV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoSV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSV)
                </td>
                <td>
                    @{if (item.GioiTinh == true)
                        { gtinh = "Nam"; }
                        else
                        { gtinh = "Nữ"; }
                    }
                    @gtinh

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnhSV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaLop)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaSV }) |
                    @Html.ActionLink("Xem chi tiết", "Details", new { id = item.MaSV }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaSV })
                </td>
            </tr>
        }

    </table>

}
