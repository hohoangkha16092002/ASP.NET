@model ThiGK_62130808.Models.DienThoai

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string xuatxu = "";
}

<h4 style="color:red;"> Bạn có chắc chắn xóa thông tin này?</h4>
<table border="0" cellpadding="0" cellspacing="0" style="font-size:14px;margin-left:50px;">
    <tr>
        <td>
            <table cellpadding="2" cellspacing="10">
                <caption><b>THÔNG TIN CHI TIẾT</b></caption>
                <tr>
                    <td rowspan="8"><img src="/images/@Html.DisplayFor(model => model.AnhDT)" width="100" height="100" /></td>
                    <td>Mã ĐT:</td>
                    <td>@Html.DisplayFor(model => model.MaDT)</td>
                </tr>
                <tr>
                <td>Tên ĐT:</td>
                    <td>@Html.DisplayFor(model => model.TenDT)</td>
                </tr>
                <tr>
                    <td>Xuất xứ:</td>
                    <td>
                        @{if (Model.XuatXu == true)
                            { xuatxu = "Nam"; }
                            else
                            { xuatxu = "Nữ"; }
                        }
                        @xuatxu
                    </td>
                </tr>
                <tr>
                    <td>Đơn giá:</td>
                    <td>@Html.DisplayFor(model => model.DonGia)</td>
                </tr>
                <tr>
                    <td>Mô tả:</td>
                    <td>@Html.DisplayFor(model => model.MoTa)</td>
                </tr>
                <tr>
                    <td>Phụ kiện kèm theo:</td>
                    <td>@Html.DisplayFor(model => model.PhuKienKemTheo)</td>
                </tr>
                <tr>
                    <td>Loại điện thoại:</td>
                    <td>@Html.DisplayFor(model => model.LoaiDienThoai.TenLDT)</td>
                </tr>

            </table>
        </td>
    </tr>
</table>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color" style="margin-left:50px;">
        <input type="submit" value="Xóa" class="btn btn-default" /> |
        @Html.ActionLink("Quay lại", "Index")
    </div>
}
