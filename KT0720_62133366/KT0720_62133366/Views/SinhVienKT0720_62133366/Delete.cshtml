@model KT0720_62133366.Models.SinhVien

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Xóa bỏ";
    string gender;
}

<div class="w3-content w3-padding">
    <div id="title" class="w3-content">
        <h2 class="">XÓA SINH VIÊN</h2>
        <hr />
    </div>
    <div class="w3-card-4 w3-light-green w3-content w3-margin-bottom" style="width:50%;">
        <div class="w3-container w3-center">
            <h3>Mã sinh viên: <span>@Html.DisplayFor(model => model.MaSV)</span></h3>
            <img src="/Images/@Html.DisplayFor(model => model.AnhSV)" alt="Avatar" style="width:77%">
        </div>
        <div id="info" class="w3-padding">
            <h5 style="margin-left: 50px;">
                Họ tên sinh viên:
                <span>@Html.DisplayFor(model => model.HoSV) </span>
                <span>@Html.DisplayFor(model => model.TenSV)</span>
            </h5>
            <h5 style="margin-left: 50px;">
                Giới tính:
                <span>
                    @{
                        if (Model.GioiTinh == true)
                        {
                            gender = "Nam";
                        }
                        else
                        {
                            gender = "Nữ";
                        }
                    }
                    @gender
                </span>
            </h5>
            <h5 style="margin-left: 50px;">
                Ngày sinh:
                <span>@Html.DisplayFor(model => model.NgaySinh)</span>
            </h5>
            <h5 style="margin-left: 50px;">
                Địa chỉ:
                <span>@Html.DisplayFor(model => model.DiaChi)</span>
            </h5>
            <h5 style="margin-left: 50px;">
                Lớp:
                <span>@Html.DisplayFor(model => model.Lop.TenLop)</span>
            </h5>
        </div>
        <div class="w3-padding-32">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="w3-center">
                    <input type="button" class="w3-button w3-red w3-border w3-margin-right" onclick="document.getElementById('modal').style.display='block'" value="Xóa bỏ" />
                    @Html.ActionLink("Quay lại", "Index", "", new { @class = "w3-button w3-blue w3-border", @style = "text-decoration: none;" })
                </div>
                <div id="modal" class="w3-modal">
                    <div class="w3-modal-content w3-card-4 w3-animate-zoom w3-light-grey">
                        <header class="w3-container w3-blue">
                            <span onclick="document.getElementById('modal').style.display='none'"
                                  class="w3-button w3-blue w3-large w3-display-topright">&times;</span>
                            <h4>Thông báo</h4>
                        </header>

                        <div class="w3-container w3-text-black" style="height: 100px;">
                            <h3 class="w3-padding">Bạn có thực sự muốn xóa nhân viên này?</h3>
                        </div>

                        <div class="w3-container w3-light-grey w3-padding">
                            <input type="button" class="w3-button w3-right w3-blue w3-border" onclick="document.getElementById('modal').style.display='none'" value="Quay lại" />
                            <input type="submit" value="Xóa bỏ" class="w3-button w3-right w3-red w3-border w3-margin-right" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>