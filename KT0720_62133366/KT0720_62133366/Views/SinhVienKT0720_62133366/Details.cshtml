@model KT0720_62133366.Models.SinhVien

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Chi tiết nhân viên";
    string gender;
}

<div class="w3-padding w3-content">
    <div id="title" class="w3-content">
        <h2 class="">CHI TIẾT SINH VIÊN</h2>
        <hr />
    </div>
    <div class="w3-card-4 w3-light-green w3-content w3-margin-bottom" style="width:50%;">
        <div class="w3-container w3-center">
            <h3>Mã sinh viên: <span>@Html.DisplayFor(model => model.MaSV)</span></h3>
            <img src="/Images/@Html.DisplayFor(model => model.AnhSV)" alt="Avatar" style="width:77%">
        </div>
        <div id="info" class="w3-padding">
            <h5 style="margin-left: 50px;">
                Họ tên sinh viên:
                <span>@Html.DisplayFor(model => model.HoSV) </span>
                <span>@Html.DisplayFor(model => model.TenSV)</span>
            </h5>
            <h5 style="margin-left: 50px;">
                Giới tính:
                <span>
                    @{
                        if (Model.GioiTinh == true)
                        {
                            gender = "Nam";
                        }
                        else
                        {
                            gender = "Nữ";
                        }
                    }
                    @gender
                </span>
            </h5>
            <h5 style="margin-left: 50px;">
                Ngày sinh:
                <span>@Html.DisplayFor(model => model.NgaySinh)</span>
            </h5>
            <h5 style="margin-left: 50px;">
                Địa chỉ:
                <span>@Html.DisplayFor(model => model.DiaChi)</span>
            </h5>
            <h5   style="margin-left: 50px;">
                Lớp:
                <span>@Html.DisplayFor(model => model.Lop.TenLop)</span>
            </h5>
        </div>
        <div class="w3-center w3-padding-32">
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaSV }, new { @class = "w3-button w3-blue w3-margin", @style = "text-decoration: none;" })
            @Html.ActionLink("Quay lại", "Index", "", new { @class = "w3-button w3-red", @style = "text-decoration: none;" })
        </div>
    </div>
</div>










    